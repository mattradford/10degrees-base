{
  "name": "tendegrees-base",
  "version": "1.0.0",
  "description": "10 Degrees base theme",
  "repository": "https://github.com/10degrees/10degrees-base",
  "main": "index.js",
  "scripts": {
    "dev": "npm run prewatch && npm run development",
    "development": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "watch": "npm run development -- --watch",
    "hot": "cross-env NODE_ENV=development node_modules/webpack-dev-server/bin/webpack-dev-server.js --inline --hot --config=node_modules/laravel-mix/setup/webpack.config.js",
    "prod": "npm run prewatch && npm run production",
    "production": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --no-progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "prewatch": "del-cli dist -f",
    "precommit-msg": "echo 'Pre-commit build...' && exit 0",
    "postcommit": "git add . && git commit -am 'Auto-build' && exit 0",
    "runprod":  "npm run prod  && exit 0"
  },
  "pre-push": [
    "runprod",
    "postcommit"
  ],
  "keywords": [
    "wordpress",
    "wordpress-theme"
  ],
  "author": "10 Degrees",
  "license": "ISC",
  "dependencies": {
    "@fortawesome/fontawesome": "^1.1.8",
    "@fortawesome/fontawesome-free": "^5.10.2",
    "bootstrap": "^4.3.1",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^5.2.0",
    "del-cli": "^2.0.0",
    "font-awesome": "^4.7.0",
    "jquery": "^3.4.1",
    "laravel-mix": "^4.0.16",
    "laravel-mix-polyfill": "^1.1.0",
    "laravel-mix-versionhash": "^1.0.7",
    "magnific-popup": "^1.1.0",
    "modernizr": "^3.7.1",
    "postcss-css-variables": "^0.12.0",
    "postcss-reporter": "^6.0.1",
    "resolve-url-loader": "2.3.1",
    "sass": "^1.21.0",
    "sass-loader": "7.*",
    "slick-carousel": "^1.8.1",
    "webpack-cleanup-plugin": "^0.5.1"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "devDependencies": {
    "copy-webpack-plugin": "^5.0.4",
    "imagemin-webpack-plugin": "^2.4.2",
    "laravel-mix-copy-watched": "^2.1.4",
    "laravel-mix-imagemin": "^1.0.3",
    "post-commit": "0.0.1",
    "pre-commit": "^1.2.2",
    "vue-template-compiler": "^2.6.10",
    "wp-pot": "^1.7.2"
  }
}
